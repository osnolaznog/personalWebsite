        section.skills
            h2.section-title 
                | What <br>
                <span class="section-title--accent">I know</span>
            .skills-container
                +skills("html", 1, 100)
                +skills("css", 2, 100)
                +skills("pug", 3, 100)
                +skills("sass", 4, 100)
                +skills("javascript", 5, 100)
                +skills("wordpress", 6, 100)
